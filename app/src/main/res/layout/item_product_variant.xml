<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.lang.Integer" />

        <variable
            name="variant"
            type="app.ecomm.data.model.content.Variant" />

        <variable
            name="itemClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="itemLongClickListener"
            type="android.view.View.OnLongClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:minWidth="236dp"
        android:onClick="@{itemClickListener}"
        android:onLongClick="@{itemLongClickListener}"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_mini_grid_size"
            app:cardBackgroundColor="@color/colorBackgroundLight"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_medium">

                <TextView
                    android:id="@+id/tvItemVariantColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{variant.color}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Sample Color" />

                <TextView
                    android:id="@+id/tvItemVariantSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_mini"
                    android:text="@{Integer.toString(variant.size)}"
                    app:layout_constraintStart_toStartOf="@id/tvItemVariantColor"
                    app:layout_constraintTop_toBottomOf="@id/tvItemVariantColor"
                    tools:text="Sample Size" />

                <TextView
                    android:id="@+id/tvItemVariantPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_mini"
                    android:text="@{Integer.toString(variant.price)}"
                    app:layout_constraintStart_toStartOf="@id/tvItemVariantColor"
                    app:layout_constraintTop_toBottomOf="@id/tvItemVariantSize"
                    tools:text="Sample Price" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>