<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBg">

    <data>
        <import type="app.ecomm.data.api.model.Status" />

        <import type="app.ecomm.data.api.model.Resource" />

        <import type="java.lang.Integer" />
        <import type="java.lang.Double" />

        <variable
            name="variant"
            type="app.ecomm.data.model.content.Variant" />

        <variable
            name="tax"
            type="app.ecomm.data.model.content.Tax" />

        <variable
            name="resource"
            type="Resource" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <app.ecomm.ui.widget.ProgressBar
            android:id="@+id/progressBar"
            visibleGone="@{resource == null || resource.status == Status.LOADING}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <TextView
            visibleGone="@{resource.status == Status.ERROR}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_grid_size"
            android:text="@string/network_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardFocusedVariant"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/spacing_medium_2"
            app:cardBackgroundColor="@color/colorBackgroundLight"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toTopOf="@+id/rvVariants"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_medium">

                <TextView
                    android:id="@+id/tvProductTitle"
                    style="@style/Home.Category.Heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Sample Color" />

                <TextView
                    android:id="@+id/tvVariantColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{variant.color}"
                    app:layout_constraintTop_toBottomOf="@id/tvProductTitle"
                    android:layout_marginTop="@dimen/spacing_grid_size"
                    tools:text="Sample Color" />

                <TextView
                    android:id="@+id/tvVariantSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_mini"
                    android:text="@{Integer.toString(variant.size)}"
                    app:layout_constraintStart_toStartOf="@+id/tvVariantColor"
                    app:layout_constraintTop_toBottomOf="@+id/tvVariantColor"
                    tools:text="Sample Size" />

                <TextView
                    android:id="@+id/tvVariantPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_mini"
                    android:text="@{Integer.toString(variant.price)}"
                    app:layout_constraintStart_toStartOf="@+id/tvVariantColor"
                    app:layout_constraintTop_toBottomOf="@+id/tvVariantSize"
                    tools:text="Sample Price" />

                <TextView
                    android:id="@+id/tvProductTax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_mini"
                    android:text="@{tax.type +' '+ Double.valueOf(tax.value)}"
                    app:layout_constraintStart_toStartOf="@+id/tvVariantColor"
                    app:layout_constraintTop_toBottomOf="@+id/tvVariantPrice"
                    tools:text="Sample Tax" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvVariants"
            visibleGone="@{resource != null &amp;&amp; resource.data != null}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_regular"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing_regular"
            android:paddingRight="@dimen/spacing_regular"
            android:scrollbars="none"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFocusedVariant"/>

    </android.support.constraint.ConstraintLayout>

</layout>